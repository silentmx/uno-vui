{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "**/*.ts",
    "**/*.d.ts",
    "**/*.vue",
    "**/*.tsx",
    "**/*.md",
    ".vitepress/**/*.ts",
    ".vitepress/**/*.vue",
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "paths": {
      "@silentmx/v-ui": [
        "../packages/v-ui/src/index.ts"
      ]
    },
    "types": [
      "vite/client",
      "./auto-imports",
      "@silentmx/v-ui/volar",
    ],
  },
  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
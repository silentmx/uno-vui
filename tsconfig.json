{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "compilerOptions": {
    "lib": [
      "ESNext",
      "DOM"
    ],
    "types": [
      "vite/client",
      "vitest/globals"
    ],
    "paths": {
      "@silentmx/v-ui": [
        "./packages/v-ui/src"
      ],
      "@v-ui/components": [
        "./packages/v-ui/src/components/index.ts"
      ]
    }
  },
  "exclude": [
    "**/dist/**",
    "**/node_modules/**",
    "**/test/dts/**",
    "**/packages/**",
    "**/docs/**"
  ],
  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "exclude": [
    "**/dist/**"
  ],
  "include": [
    "**/*.ts",
    "**/*.d.ts",
    "**/*.vue",
    "**/*.tsx",
    "**/*.md",
    ".vitepress/**/*.ts",
    ".vitepress/**/*.vue",
    "../packages/v-ui/volar.d.ts"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "types": [
      "vite/client",
      "@silentmx/v-ui/volar",
      "./auto-imports"
    ],
    "paths": {
      "@silentmx/v-ui": [
        "../packages/v-ui/src"
      ]
    }
  },
  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
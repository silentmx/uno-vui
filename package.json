{
  "name": "monorepo",
  "type": "module",
  "version": "0.0.3-beta.0",
  "private": true,
  "packageManager": "pnpm@8.3.1",
  "scripts": {
    "dev": "nr stub",
    "stub": "pnpm -r --filter=./packages/* --parallel run stub",
    "build": "pnpm run clean && pnpm -r --filter=./packages/* --parallel run build && pnpm run docs:build",
    "docs:dev": "pnpm --filter=docs run docs:dev",
    "docs:build": "pnpm --filter=docs run docs:build",
    "release": "bumpp package.json packages/**/package.json docs/package.json",
    "clean": "rimraf packages/*/dist docs/.vitepress/dist docs/.vitepress/cache"
  },
  "devDependencies": {
    "@antfu/ni": "^0.21.3",
    "@iconify/json": "^2.2.57",
    "@iconify/tools": "^2.2.6",
    "@rollup/plugin-dynamic-import-vars": "^2.0.3",
    "@types/fs-extra": "^11.0.1",
    "@types/node": "^18.16.2",
    "@vitejs/plugin-vue": "^4.2.1",
    "@vue/compiler-core": "^3.2.47",
    "@vueuse/core": "^10.1.0",
    "bumpp": "^9.1.0",
    "esno": "^0.16.3",
    "fs-extra": "^11.1.1",
    "pnpm": "^8.3.1",
    "rimraf": "^5.0.0",
    "typescript": "^5.0.4",
    "uno-vui": "workspace:*",
    "unocss": "^0.51.8",
    "unplugin-auto-import": "^0.15.3",
    "unplugin-vue-components": "^0.24.1",
    "vite": "^4.3.3",
    "vitepress": "1.0.0-alpha.74",
    "vitest": "^0.30.1",
    "vue": "3.2.47",
    "vue-tsc": "^1.6.1"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@algolia/client-search"
      ]
    }
  }
}
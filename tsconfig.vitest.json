{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "test/**/*",
    "packages/**/*",
    "./auto-imports"
  ],
  "compilerOptions": {
    "composite": true,
    "ignoreDeprecations": "5.0",
    "baseUrl": ".",
    "lib": [],
    "types": [
      "vite/client",
      "node",
      "jsdom"
    ],
    "paths": {
      "@uno-vui": [
        "./packages/uno-vui/lib"
      ],
      "@uno-vui/*": [
        "./packages/uno-vui/lib/*"
      ]
    }
  }
}
{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    ".vitepress/**/*.ts",
    ".vitepress/**/*.vue",
    "example/**/*.vue",
    "components/**/*.md",
    "guide/**/*.md",
    "shims.d.ts",
    "auto-import.d.ts",
  ],
  "exclude": [
    "**/dist/**"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "paths": {
      "@/*": [
        "./*"
      ],
      "v-ui": [
        "../dist/types"
      ]
    },
    "types": [
      "vite/client",
      "@silentmx/v-ui/volar"
    ]
  }
}
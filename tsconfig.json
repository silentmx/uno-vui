{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.d.ts",
    "src/**/*.vue",
    "volar.d.ts"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist/types",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "v-ui": [
        "./dist/types"
      ]
    },
    "types": [
      "vite/client",
      "vitest/globals",
    ]
  },
  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}